<%= form_with(model: user, url: destination) do |f| %>
  
  <div class="field">
    <%= f.label :name %>
    <div> </div>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <div> </div>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <div> </div>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <div> </div>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="field">
    <%= f.label :admin_role %>
    <div> </div>
     <%= f.check_box :admin, id: :admin_role,:as => :boolean%>
  </div>

  <div> </div>
  <div class="actions">
    <%= f.submit butname, id:id %>
  </div>

<% end %>


