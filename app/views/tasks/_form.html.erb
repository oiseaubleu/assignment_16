<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title%>
    <div> </div>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <div> </div>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :deadline_on %>
    <div> </div>
    <%= form.date_field :deadline_on %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <div> </div>
    <%= form.select :priority,Task.enum_options_for_select(:priority),{include_blank: ''} %>
  
  </div>

  <div class="field">
    <%= form.label :status %>
    <div> </div>
    <%= form.select :status, Task.enum_options_for_select(:status) , {include_blank: ''} %> 
      <%# Task.statuses.keys.to_a, から変更！%>
  </div>
  

  <div class="field">
      <%= form.label 'ラベル' %>
    <div> </div>
    <% current_user.labels.each do |label| %>
      <%= form.check_box :label_ids, { multiple: true, include_hidden: false }, label[:id] %>
      <%= label.name %>
    <% end %>
  </div>

<div> </div>
  <div class="actions">
    <%= form.submit butname, id:id %>
  </div>
<% end %>
